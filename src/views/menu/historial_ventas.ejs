<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de Ventas - MediStock</title>
    <link rel="stylesheet" href="/css/historial.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .container {
            padding: 20px;
        }

        .content {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #343a40;
            margin-bottom: 30px;
        }

        .acciones {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            margin-bottom: 15px;
        }

        .btn-regreso,
        .btn-exportar {
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 14px;
            color: white;
            margin: 5px 0;
        }

        .btn-regreso {
            background-color: #28a745;
        }

        .btn-exportar {
            background-color: #007bff;
        }

        .btn-exportar.excel {
            background-color: #17a2b8;
        }

        .tabla-responsive {
            width: 100%;
            overflow-x: auto;
        }

        .tabla-ventas {
            width: 100%;
            min-width: 800px;
            border-collapse: collapse;
        }

        .tabla-ventas th, .tabla-ventas td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: left;
        }

        .tabla-ventas th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            position: sticky;
            top: 0;
        }

        .tabla-ventas tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .tabla-ventas tr:hover {
            background-color: #f1f1f1;
        }

        .delete-button {
            padding: 6px 12px;
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .delete-button:hover {
            background-color: #c82333;
        }

        .delete-button:active {
            background-color: #bd2130;
        }
    </style>
</head>
<body>
    <div class="container">
        <main class="content">
            <h2>Historial de Ventas</h2>

            <div class="acciones">
                <a href="/menu/venta" class="btn-regreso">Regresar</a>
                <div>
                    <a href="/menu/pdf" class="btn-exportar">Exportar PDF</a>
                </div>
            </div>

            <% if (ventas && ventas.length > 0) { %>
                <div class="tabla-responsive">
                    <table class="tabla-ventas">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Medicamento</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Total</th>
                                <th>Vendedor</th>
                                <th>Cliente</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% ventas.forEach(venta => { %>
                                <tr>
                                    <td><%= new Date(venta.fecha_venta).toLocaleDateString('es-MX', {
                                        day: '2-digit',
                                        month: 'short',
                                        year: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %></td>
                                    <td><%= venta.medicamento %></td>
                                    <td><%= venta.cantidad %></td>
                                    <td>$<%= venta.precio_unitario.toFixed(2) %></td>
                                    <td>$<%= venta.total.toFixed(2) %></td>
                                    <td><%= venta.vendedor %></td>
                                    <td><%= venta.cliente %></td>
                                    <td>
                                        <form action="/menu/historial_ventas/eliminar/<%= venta.id_venta %>" method="post" onsubmit="return confirm('¿Estás seguro de eliminar esta venta?');">
                                            <button type="submit" class="delete-button">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>No hay registros de ventas.</p>
            <% } %>
        </main>
    </div>
</body>
</html>
