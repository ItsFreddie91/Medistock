<%- include('../layouts/main') %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOGIN</title>
    <link rel="stylesheet" href="/bootstrap.css">
    <link rel="icon" href="/icons/favicon.ico" type="image/x-icon">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            background: linear-gradient(to right, #e0f7fa, #ffffff);
            min-height: 100vh;
        }
        .card {
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            background-color: #fdfefe;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <img src="/icons/medistock.png" class="img-fluid mx-auto d-block img-thumbnail" alt="Logo MediStock" style="width: 150px;">
                        <h5 class="text-center mt-3 text-muted">Bienvenido al sistema de gesti칩n de medicamentos</h5>
                        <br>
                        <% if (typeof message !== 'undefined') { %>
                            <div class="alert alert-danger" role="alert">
                                <%= message %>
                            </div>
                        <% } %>

                        <form action="/login" method="POST">
                            <div class="form-group mb-4 input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" class="form-control" name="usuario" placeholder="Ingresa tu Usuario" required>
                            </div>

                            <div class="form-group mb-4 input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                </div>
                                <input type="password" class="form-control" name="contrasena" placeholder="Ingresa tu Contrase침a" required>
                            </div>




                            <button type="submit" class="btn btn-primary btn-block w-100 mb-2">Iniciar sesi칩n</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer style="position: fixed; bottom: 0; width: 100%; text-align: center; padding: 10px; background-color: #d4e1ee;">
        <p>&copy; <span id="year"></span> MediStock | Versi칩n 1.0</p>
    </footer>


</body>
</html>
